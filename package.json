{
  "name": "microfreak-architect",
  "version": "2.9.0",
  "description": "Premium patch generator for Arturia MicroFreak",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w",
    "dist:portable": "electron-builder -w portable",
    "dist:installer": "electron-builder -w nsis"
  },
  "build": {
    "appId": "com.microfreak.architect",
    "productName": "FreakGEN Architect",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "keywords": [],
  "author": "Comet620",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}